<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.SVGPath?>
<?import javafx.scene.text.*?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.pleon.donim.controller.AboutController"
      stylesheets="/css/styles.css"
      fx:id="root"
      styleClass="dark"
      prefWidth="252">

    <AnchorPane fx:id="title_bar">

        <HBox>
            <ImageView>
                <HBox.margin>
                    <Insets left="4" right="4"/>
                </HBox.margin>
                <Image url="/img/logo.svg" requestedWidth="16" requestedHeight="25"/>
            </ImageView>

            <Label fx:id="title" prefHeight="25" text="About"/>
        </HBox>

        <StackPane fx:id="close" AnchorPane.rightAnchor="0" onMouseClicked="#close">
            <SVGPath fx:id="close_icon"
                     content="M 7.9902344,6.9902344 A 1.0001,1.0001 0 0 0 7.2929688,8.7070312 L 10.585938,12 7.2929688,15.292969 a 1.0001,1.0001 0 1 0 1.4140624,1.414062 L 12,13.414062 l 3.292969,3.292969 a 1.0001,1.0001 0 1 0 1.414062,-1.414062 L 13.414062,12 16.707031,8.7070312 A 1.0001,1.0001 0 1 0 15.292969,7.2929688 L 12,10.585938 8.7070312,7.2929688 A 1.0001,1.0001 0 0 0 7.9902344,6.9902344 Z">
            </SVGPath>
        </StackPane>
    </AnchorPane>

    <VBox prefHeight="289" alignment="CENTER">
        <Text styleClass="about" text="Developer: Mahdi Hosseinzadeh">
            <VBox.margin>
                <Insets bottom="16"/>
            </VBox.margin>
        </Text>
        <Text styleClass="about" text="Written in Kotlin">
            <VBox.margin>
                <Insets bottom="16"/>
            </VBox.margin>
        </Text>
        <Text styleClass="about" text="Powered by JavaFX">
            <VBox.margin>
                <Insets bottom="16"/>
            </VBox.margin>
        </Text>
        <Text styleClass="about" text="Timer inspired by TilesFX">
            <VBox.margin>
                <Insets bottom="16"/>
            </VBox.margin>
        </Text>
        <Text styleClass="about" text="Icons created with Inkscape">
            <VBox.margin>
                <Insets bottom="16"/>
            </VBox.margin>
        </Text>
        <Hyperlink fx:id="link" text="www.mahozad.ir"/>
    </VBox>

</VBox>
