        </Button>
        <Button styleClass="btn" text="${controller.pauseString}" onAction="#pauseResume">
            <HBox.margin>
                <Insets top="20" bottom="16"/>
            </HBox.margin>
        </Button>
        <Button fx:id="skip" styleClass="btn" text="Skip" disable="true" onAction="#skip">
