<?xml version="1.0" encoding="UTF-8"?>

<?import com.pleon.donim.node.CircularProgressBar?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.SVGPath?>
<?import javafx.scene.text.Text?>
<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:id="root"
      stylesheets="/css/styles.css"
      styleClass="dark"
      fx:controller="com.pleon.donim.controller.MainController">

    <AnchorPane fx:id="title_bar">

        <!-- <MenuBar AnchorPane.leftAnchor="0">-->
        <!--     <Menu text="salasl">-->
        <!--         <MenuItem text="asdlfij"/>-->
        <!--         <CheckMenuItem text="asdlfij"/>-->
        <!--     </Menu>-->
        <!--     <Menu text="etdbd"/>-->
        <!-- </MenuBar>-->

        <ImageView AnchorPane.leftAnchor="4">
            <Image url="/svg/logo.svg" requestedWidth="16" requestedHeight="25"/>
        </ImageView>

        <Label fx:id="title" prefHeight="25" text="Donim" AnchorPane.leftAnchor="25"/>

        <StackPane fx:id="close" AnchorPane.rightAnchor="0" onMouseClicked="#close">
            <ImageView>
                <Image url="/svg/ic-close.svg" requestedHeight="24" requestedWidth="24"/>
            </ImageView>
        </StackPane>
        <StackPane fx:id="minimize" AnchorPane.rightAnchor="36" onMouseClicked="#minimize">
            <ImageView>
                <Image url="/svg/ic-minimize.svg" requestedHeight="24" requestedWidth="24"/>
            </ImageView>
        </StackPane>
    </AnchorPane>

    <AnchorPane>
        <Region fx:id="theme" onMouseClicked="#toggleTheme" styleClass="icon"
                prefWidth="18" prefHeight="18"
                AnchorPane.topAnchor="12" AnchorPane.rightAnchor="16"/>
    </AnchorPane>

    <StackPane>
        <Text text="${controller.remainingTimeString}"
              styleClass="time"/>
        <CircularProgressBar fx:id="progressBar"
                             width="200"
                             height="200"
                             title="SsSs"/>
        <VBox.margin>
            <Insets right="16" left="16"/>
        </VBox.margin>
    </StackPane>

    <HBox alignment="CENTER">
        <Button fx:id="restart" styleClass="btn" disable="true" onAction="#restart">
            <graphic>
                <SVGPath
                        styleClass="icon"
                        content="m 11.819753,5.2504521 c -0.194613,0.00585 -0.383662,0.066288 -0.545574,0.1744215 L 8.1589309,7.5017054 c -0.6163911,0.4110916 -0.6163911,1.3168973 0,1.7279889 l 3.1152481,2.0768317 c 0.690083,0.459854 1.614235,-0.03473 1.614412,-0.863995 V 9.5 c 1.074119,0.2876032 2.030567,1.087688 2.470294,2.149284 0.563686,1.360858 0.252603,2.919434 -0.788953,3.960989 -1.041555,1.041556 -2.60013,1.350611 -3.960989,0.786925 -1.3608583,-0.563687 -2.2431403,-1.885644 -2.2431401,-3.358627 0.01986,-1.404274 -2.0966918,-1.404274 -2.0768319,0 -2e-7,2.307018 1.3955569,4.394404 3.5269639,5.277262 2.1314061,0.882858 4.5910751,0.394133 6.2223831,-1.237175 1.631307,-1.631308 2.12206,-4.093004 1.239203,-6.224411 C 16.518285,9.0212875 14.802923,7.6247063 12.888591,7.3 V 6.288868 C 12.888782,5.7032983 12.405073,5.2333569 11.819753,5.2504521 Z"/>
            </graphic>
            <HBox.margin>
                <Insets right="8" top="20" bottom="16"/>
            </HBox.margin>
        </Button>
        <Button styleClass="btn" onAction="#pauseResume">
            <graphic>
                <SVGPath
                        fx:id="playIcon"
                        styleClass="icon"
                        content="M8 6.82v10.36c0 .79.87 1.27 1.54.84l8.14-5.18c.62-.39.62-1.29 0-1.69L9.54 5.98C8.87 5.55 8 6.03 8 6.82z"/>
            </graphic>
            <HBox.margin>
                <Insets top="20" bottom="16"/>
            </HBox.margin>
        </Button>
        <Button fx:id="skip" styleClass="btn" disable="true" onAction="#skip">
            <graphic>
                <SVGPath
                        styleClass="icon"
                        content="M7.58 16.89l5.77-4.07c.56-.4.56-1.24 0-1.63L7.58 7.11C6.91 6.65 6 7.12 6 7.93v8.14c0 .81.91 1.28 1.58.82zM16 7v10c0 .55.45 1 1 1s1-.45 1-1V7c0-.55-.45-1-1-1s-1 .45-1 1z"/>
            </graphic>
            <HBox.margin>
                <Insets left="8" top="20" bottom="16"/>
            </HBox.margin>
        </Button>
    </HBox>
</VBox>
